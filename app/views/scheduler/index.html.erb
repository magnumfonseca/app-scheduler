<div class="container">
	<table class="table table-striped table-hover">
		<%= table_head%>
		<tbody>
			<% generate_hour_range.each do |hour| %>
				<tr>
					<th><%=hour%></td>
					<% days_of_week.each do |day|%>
						<% if @hash_events[day] && @hash_events[day][hour.to_i] %>
							<%= room_unavailable(@hash_events[day][hour.to_i])%>
						<%else%>
							<td> <a role="button" class="available"
									data-day=<%=day%> data-hour=<%=hour.to_i%> 
									data-week=<%=@current_week%>>
										Dispon√≠vel
								</a>
							</td>
						<%end%>
					<%end%>
				</tr>
			<%end%>
		</tbody>
	</table>
</div>

