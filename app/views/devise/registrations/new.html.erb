<div class="container">
	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html=> { class: 'form-signin' }) do |f| %>
		<h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Sign up</h2>
		<%= f.error_notification %>
		<%= f.input :name, label: false, placeholder: 'Name', required: true, autofocus: true, input_html: { class: 'form-control' } %>
		<%= f.input :email, label: false, placeholder: 'Email address', required: true, input_html: { class: 'form-control' } %>
		<%= f.input :password, label: false, placeholder: 'Password', required: true, input_html: { class: 'form-control' } %>
		<%= f.input :password_confirmation, label: false, placeholder: 'Password Confirmation', required: true, input_html: { class: 'form-control' } %>
		<%= f.button :submit, 'Sign up', { class: "btn btn-lg btn-primary btn-block" }%>
	<%end%>
</div>
